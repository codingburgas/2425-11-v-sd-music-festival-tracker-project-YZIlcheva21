@model RegisterViewModel

<div class="container">
    <div class="row-cols-1">
        <div class="row justify-content-center">
            <div class="col col-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Register</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <div class="form-floating mb-2">
                                <input class="form-control" asp-for="FirstName" type="text" placeholder=""/>
                                <label class="form-label">First Name</label>
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>

                            <div class="form-floating mb-2">
                                <input class="form-control" asp-for="LastName" type="text" placeholder=""/>
                                <label class="form-label">Last Name</label>
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                            
                            
                            <div class="form-floating mb-2">
                                <input class="form-control" asp-for="Email" type="email" placeholder=""/>
                                <label class="form-label">Email</label>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            
                            <div class="form-floating mb-2">
                                <input class="form-control" asp-for="Password" type="password" placeholder=""/>
                                <label class="form-label">Password</label>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            
                            <div class="form-floating mb-2">
                                <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder=""/>
                                <label class="form-label">Confirm Password</label>
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <button class="btn btn-primary" type="submit">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>