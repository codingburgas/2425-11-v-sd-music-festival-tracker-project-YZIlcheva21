@model CreateEventViewModel

<div class="card" xmlns="http://www.w3.org/1999/html">
    <div class="card-header">
        <h3>Create a music event</h3>
    </div>
    <div class="card-body">
        <form asp-action="CreateEvent" method="post" enctype="multipart/form-data">
            <div class="form-floating mb-2">
                <input class="form-control" asp-for="Name" type="text" placeholder=""/>
                <label class="form-label">Name</label>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>     
            <div class="form-floating mb-2">
                <textarea class="form-control" style="height: 25vh;" asp-for="Content" type="text" placeholder=""></textarea>
                <label class="form-label">Content</label>
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
            <div class="form-check form-switch mb-2">
                <label class="form-check-label">Make Public</label>
                <input class="form-check-input" type="checkbox" asp-for="IsPublic"/>
            </div>
            <div class="mb-2">
                <input type="file" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            <button class="btn btn-primary" type="submit">Create</button>
        </form>
    </div>
</div>