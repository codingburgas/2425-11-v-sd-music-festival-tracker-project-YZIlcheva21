@model UpdateEventViewModel;

<div class="card">
    <div class="card-header">
        <h3>Update a event</h3>
    </div>
    <div class="card-body">
        <form asp-action="UpdateEvent" method="post">
            <div class="form-floating mb-2">
                <input class="form-control" asp-for="Name" type="text" placeholder="" value="@Model.Name"/>
                <label class="form-label">Name</label>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-floating mb-2">
                <textarea class="form-control" style="height: 25vh;" asp-for="Content" type="text" placeholder="" value="@Model.Content"></textarea>
                <label class="form-label">Content</label>
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
            <div class="form-check form-switch">
                <label class="form-check-label">Make Public</label>
                <input class="form-check-input" type="checkbox" asp-for="IsPublic"/>
            </div>
            <button class="btn btn-warning" type="submit">Update</button>
        </form>
    </div>
</div>