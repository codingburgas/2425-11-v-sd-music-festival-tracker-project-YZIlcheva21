@model MusicFestivalManagementSystem.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <!-- Error Message -->
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken() <!-- CSRF Protection -->

            <!-- Username -->
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" aria-label="Username" autocomplete="username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" aria-label="Password" autocomplete="current-password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" />
                <label class="form-check-label" for="rememberMe" title="Stay logged in on this device">Remember me</label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <!-- Registration Link -->
        <p class="text-center mt-3">
            Don't have an account? <a asp-action="Register" asp-controller="Account">Register here</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Optional: Add JavaScript for enhanced user feedback or accessibility
        document.querySelector('form').addEventListener('submit', function () {
            const submitButton = document.querySelector('button[type="submit"]');
            submitButton.disabled = true;
            submitButton.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Logging in...';
        });
    </script>
}
